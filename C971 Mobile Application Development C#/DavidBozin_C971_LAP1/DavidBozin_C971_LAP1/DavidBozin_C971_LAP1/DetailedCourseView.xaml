<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="DavidBozin_C971_LAP1.DetailedCourseView">
    <StackLayout Margin="30,0">
        <Frame Padding="0"
               VerticalOptions="Start"
               CornerRadius="0" 
               HasShadow="True" >
            <StackLayout Margin="0" Orientation="Horizontal">
                <Image Source="owl_logo.png"
                       HorizontalOptions="Start"
                       VerticalOptions="Start" Margin="10,5"/>
                <Label Text="{Binding Name}"
                       VerticalTextAlignment="Center" 
                       FontAttributes="Bold" 
                       FontSize="32"/>
                <Label x:Name="IDTag"
                       Text="{Binding ID}"
                       IsVisible="false"
                       WidthRequest="0"/>
            </StackLayout>
        </Frame>
        <StackLayout VerticalOptions="StartAndExpand">
            <ListView x:Name="TermsList"
                      ItemSelected="ViewAssessmentClicked"
                      HeightRequest="120"
                      HasUnevenRows="True"
                      RowHeight="-1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Padding="1"
                                   Margin="0.5, 0.5">
                                <StackLayout>
                                    <Label Text="{Binding Name}"
                                           FontSize="20"/>
                                    <Label Text="{Binding Start}"
                                           FontSize="12"/>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="AddButton"
                    Text="+"
                    FontSize="28"
                    TextColor="Black"
                    BackgroundColor="White"
                    BorderWidth="4"
                    BorderColor="Black"
                    CornerRadius="32"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    WidthRequest="64"
                    HeightRequest="64"
                    Padding="0,0,0,2"
                    Clicked="AddAssessmentClicked"/>
            <StackLayout HeightRequest="300">
                <Label Text="Notes"
                       FontSize="20"/>
                <Editor x:Name="Notes"
                        Text="{Binding Notes}"
                        HeightRequest="200"/>
                <Button Text="Share"
                        WidthRequest="100"
                        Clicked="ShareClicked"/>
            </StackLayout>
        </StackLayout>
        <Button Text="Save"
                FontSize="28"
                TextColor="Black"
                BackgroundColor="White"
                BorderWidth="4"
                BorderColor="Black"
                CornerRadius="32"
                VerticalOptions="End"
                Clicked="Save"
                WidthRequest="200"/>
        <Button Text="Edit Course"
                FontSize="28"
                TextColor="Black"
                BackgroundColor="White"
                BorderWidth="4"
                BorderColor="Black"
                CornerRadius="32"
                VerticalOptions="End"
                Clicked="EditCourse"
                WidthRequest="200"/>
    </StackLayout>
</ContentPage>